<div class="container">
  <h1>Add a new Contribution</h1>
  <br />
    <%= simple_form_for @entry do |f| %>
      <%= f.input :title, :placeholder => "Title here", :label => false %>
      <br/>
      <%= f.text_area :body, :placeholder => "Input content here", id: :post_body, :rows => 8, :cols => 120 %>
      <trix-editor input="post_body"></trix-editor>
      <br />
      <br />
      <%= f.submit "Create", class: 'btn btn-success' %>

    <% end %>
    <br />
</div>
